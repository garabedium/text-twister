{
  "extends": [
    "airbnb", 
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"    
  ],
  "env":{
    "jest": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": ["./tsconfig.eslint.json"]
  },
  "ignorePatterns": [
    "webpack.config.cjs"
  ],  
  "rules": {
    "import/named": "error"
  }
}