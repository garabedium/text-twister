{
  "extends": [
    "airbnb", 
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"    
  ],
  "env":{
    "jest": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": ["./tsconfig.eslint.json"]
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js"
      ],
      "rules": {
        "import/named": "error",
        "react/jsx-props-no-spreading": "off"
      },
      "parserOptions": {
        "project": "tsconfig.json"
      }      
    }
  ]
}